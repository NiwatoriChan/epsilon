<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>piloteJdbc</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>urlBd</param-name>
        <param-value>jdbc:mysql://localhost/epsilonDB?user=root&amp;password=root</param-value>
    </context-param>
    <servlet>
        <description>controleur qui reçoit toutes les requêtes</description>
        <servlet-name>controleur</servlet-name>
        <servlet-class>com.edemers.epsilon.controleur.ControleurFrontal</servlet-class>
    </servlet>
    <servlet>
        <description>servelette de login</description>
        <servlet-name>login</servlet-name>
        <servlet-class>com.edemers.epsilon.controleur.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.edemers.epsilon.controleur.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.edemers.epsilon.controleur.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Afficher</servlet-name>
        <servlet-class>com.edemers.epsilon.controleur.Afficher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controleur</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Afficher</servlet-name>
        <url-pattern>/afficher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
